{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Full Project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/src/**/*.cpp", 
                "-o",
                "${workspaceFolder}/main",
                "-I${workspaceFolder}/include",
                "-lglut", "-lGLU", "-lGL", "-lGLEW", "-lopenal", "-lalut"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}